@model LiberaryBK.Models.Books

@{
    ViewData["Title"] = "Edit";
}

@section nav
{
    <li class="nav-item mx-0 mx-lg-1">
        <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" asp-controller="Home" asp-action="Index">Home</a>
    </li>
    <li class="nav-item mx-0 mx-lg-1">
        <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" asp-action="Index">Books</a>
    </li>
}
<div class="container" style="margin-top:110px">
    <center>
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger row"></div>
                <input type="hidden" asp-for="BookId" />
                <div class="form-group row">
                    <label asp-for="BookName" class="control-label"></label>
                    <input asp-for="BookName" class="form-control" />
                    <span asp-validation-for="BookName" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="TypeF1" class="control-label"></label>
                    <select asp-for="TypeF1" class="form-control" asp-items="ViewBag.TypeF1"></select>
                    <span asp-validation-for="TypeF1" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="BookPdf" class="control-label"></label>
                    <input asp-for="BookPdf" class="form-control" />
                    <span asp-validation-for="BookPdf" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="BookCover" class="control-label"></label>
                    <input asp-for="BookCover" class="form-control" />
                    <span asp-validation-for="BookCover" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Writer" class="control-label"></label>
                    <select asp-for="Writer" class="form-control" asp-items="ViewBag.Writer"></select>
                    <span asp-validation-for="Writer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
</center>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

</div>
