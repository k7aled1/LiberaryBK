@model IEnumerable<LiberaryBK.Models.Books>

@{
    ViewData["Title"] = "Books";
}

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<meta http-equiv="x-ua-compatible" content="ie=edge">
<title>Material Design Bootstrap</title>
<!-- Font Awesome -->
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
<!-- Bootstrap core CSS -->
<link href="~/css/bootstrap.min.css" rel="stylesheet">
<!-- Material Design Bootstrap -->
<link href="~/css/mdb.min.css" rel="stylesheet">
<!-- Your custom styles (optional) -->
<link href="~/css/style.min.css" rel="stylesheet">

@section nav
{

<li style="margin-top:10px">
    <form asp-action="Search" asp-route-entered=searchValue>
        <input type="search" class="form-control" name="searchValue" placeholder="Search Books"/>
    </form>
</li>
<li class="nav-item mx-0 mx-lg-1">
    <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" asp-controller="Home" asp-action="Index">Home</a>
</li>
}

<div class="container"style="margin-top:110px">
    <section class="text-center mb-4">
        <!--Grid row-->
        <div class="row wow fadeIn">
            <!--Grid column-->
            @foreach (var item in Model)

            {
                var photoPath = "~/Images/" + (item.BookCover ?? "165b797d-390f-4164-ac4b-21b249a04709_simba.jpg");
                <div class="col-lg-3 col-md-6 mb-4">
                    <table>
                        <tr>
                            <td>
                                <!--Card-->
                                <div class="card">
                                    <!--Card image-->
                                    <div class="view overlay">
                                        <img style="width:100%;height:350px" src="@photoPath"
                                             asp-append-version="true" class="card-img-top">

                                        <a asp-action="Details" asp-route-id="@item.BookId">
                                            <div class="mask rgba-white-slight"></div>
                                        </a>
                                    </div>
                                    <!--Card image-->
                                    <!--Card content-->
                                    <div class="card-body text-center">
                                        <!--Category & Title-->
                                        <a asp-action="Details" asp-route-id="@item.BookId" class="grey-text">
                                            <h5>@item.TypeF1Navigation.TypeName</h5>
                                        </a>
                                        <h5>
                                            <strong>
                                                <a asp-action="Details" asp-route-id="@item.BookId" class="dark-grey-text">
                                                    @item.BookName
                                                    <span class="badge badge-pill danger-color">NEW</span>
                                                </a>
                                            </strong>
                                        </h5>

                                        <h4 class="font-weight-bold blue-text">
                                            <strong>@item.Price</strong>
                                        </h4>
                                        <h4 class="font-weight-bold blue-text">
                                            <strong>@item.Userr.Name</strong>
                                        </h4>
                                        <a asp-action="Edit" asp-route-id="@item.BookId">Edit</a> |
                                        <a asp-action="Delete" asp-route-id="@item.BookId">Delete</a>
                                    </div>
                                    <!--Card content-->

                                </div>

                            </td>
                        </tr>
                    </table>
                </div>
            }


        </div>
        <p>
            <a class="btn btn-primary" asp-action="Create">Upload Book</a>
        </p>
    </section>
</div>
